@using OnlineShoppingApplication.Models;

@model IEnumerable<ProductViewModelCart>
@{
    ViewData["Title"] = "products";
    var list = (List<ProductViewModelCart>)ViewData["products"];

    decimal sum = 0;
    int sum1 = 0;
}

<h2>COD</h2>

<div class="container">
    <div class="row">
        <div class="well col-xs-10 col-sm-10 col-md-6 col-xs-offset-1 col-sm-offset-1 col-md-offset-3">
            <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-6">
                    <address>
                        <strong>Elf Cafe</strong>
                        <br>
                        2135 Sunset Blvd
                        <br>
                        Los Angeles, CA 90026
                        <br>
                        <abbr title="Phone">P:</abbr> (213) 484-6829
                    </address>
                </div>
                <div class="col-xs-6 col-sm-6 col-md-6 text-right">
                    <p id="demo"></p>
                    <p>
                        <em>Receipt #: 34522677W</em>
                    </p>
                </div>
            </div>
            <div class="row">
                <div class="text-center">
                    <h1>Receipt</h1>
                </div>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th class="text-center">Quantity</th>
                            <th class="text-center">Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (var i = 0; i < list.Count; i++)
                        {
                            sum += list[i].Price;
                            sum1 += list[i].Quantity;
                            <tr>
                                <td>
                                    <label>@list[i].Title</label> <input type="hidden" name="[@i].Title" value="@list[i].Title" />
                                </td>
                                <td><label>@list[i].Quantity</label></td>
                                <td>
                                    <label>@list[i].Price</label> <input type="hidden" name="[@i].Price" value="@list[i].Price" />
                                </td>
                            </tr>
                        }
                        <tr>
                            <td>   </td>
                            <td>   </td>


                        </tr>
                        <tr>
                            <td>   </td>
                            <td>   </td>
                            <td class="text-right"><h4><strong>Total-Amount: </strong></h4></td>
                            <td class="text-center text-danger"><h4><strong>@sum</strong></h4></td>

                        </tr>
                        <tr>
                            <td>   </td>
                            <td>   </td>
                            <td class="text-right"><h4><strong>Total-Quantity: </strong></h4></td>
                            <td class="text-center text-danger"><h4><strong>@sum1</strong></h4></td>

                        </tr>

                    </tbody>
                </table>
                <button type="button" class="btn btn-success btn-lg btn-block">
                    Pay Now   <span class="glyphicon glyphicon-chevron-right"></span>
                </button>
            </div>
        </div>
    </div>
</div>
<script>
    var d = new Date();
    document.getElementById("demo").innerHTML = d.toDateString();
</script>